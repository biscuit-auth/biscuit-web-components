  {
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "lib": ["es2017", "dom"],
    "declaration": true,
    "allowJs": true,
    "strict": true,
